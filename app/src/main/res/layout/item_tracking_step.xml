<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <View
        android:id="@+id/timelineLine"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="23dp"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/statusDot"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/outline_circle_24"
        android:contentDescription="Status Indicator"
        app:tint="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/timelineLine"
        app:layout_constraintEnd_toEndOf="@id/timelineLine" />

    <TextView
        android:id="@+id/statusTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Order Placed"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/statusDot"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/statusSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="October 25, 2025 - 10:30 AM"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/statusTitle"
        app:layout_constraintStart_toEndOf="@id/statusDot"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>